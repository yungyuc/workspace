#!/bin/bash

instname=$1

instdir=$HOME/var/run/gce/$instname
mkdir -p $instdir

instip=`gcloud compute instances describe $instname | grep natIP | cut -d ' ' -f 6`
echo $instip > $instdir/public_ip

ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no \
  $instip "ssh-keyscan $instip 2> /dev/null > /tmp/host_key.pub"
scp -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no \
  $instip:/tmp/host_key.pub $instdir/known_hosts

# vim: set et nu nobomb fenc=utf8 ft=sh ff=unix sw=2 ts=2:
